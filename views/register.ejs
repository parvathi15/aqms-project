<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <!-- Include Axios from a CDN -->
    <script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>
    <title>Register | Node Auth</title>
    <link href="styles.css" rel="stylesheet">
  </head>
  <body>
    <section class="ftco-section">
      <div class="container">
        <div class="row justify-content-center">
          <div class="col-md-6 col-lg-5">
            <div class="login-wrap p-4 p-md-5">
              <div class="icon d-flex align-items-center justify-content-center">
                <i class="fa fa-user" aria-hidden="true"></i>
              </div>
              <h3 class="text-center mb-4">Have an account?</h3>
              <% if (typeof err !== 'undefined' && err) { %>
                <p class = "error"><%= err %></p>
              <% } %>
              <form action="/register" method="POST">
                <label for="Username">Username:</label>
                <div class="form-group">
                  <input type="text"  class="form-control" name="username" >
                </div>
                <label for="email">Email:</label>
                <div class="form-group">
                 <input type="text"  class="form-control"  name = "email">
                 </div>
                 <label for="password">Password:</label>
                 <div class="form-group">
                   <input type="password" class="form-control" name="password" required>
                 </div>
                 <div class="d-grid gap-2">
                   <button type="submit" class="btn btn-primary mt-3 p-3 px-5">Submit</button>
                 </div>
                 <div class="w-50 mx-auto mb-3 mt-3">
                  <a href = "/" class = "login-link mt-2">Back to <b>login</b> page</a>
                </div>
              </form>
            </div>
    </div>
  </div>
  </div>
    </section>
  
  </body>
</html>
